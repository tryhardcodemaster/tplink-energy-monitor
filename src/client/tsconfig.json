{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "/build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "src/server",
    "build/**/*"
  ]
}
