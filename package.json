{
  "name": "tplink-monitor",
  "version": "1.0.0",
  "description": "An energy monitoring dashboard for TP-Link smart plugs",
  "repository": "https://github.com/xeroxxx/tplink-monitor",
  "license": "GPL-3.0",
  "author": {
    "name": "James Barnett"
  },
  "contributors": {
    "name": "SebastianSiebert"
  },
  "pre-commit": [
    "code:format",
    "code:lint"
  ],
  "scripts": {
    "code:lint": "eslint --ext .ts ./src",
    "code:format": "prettier --write src/**/*.ts",
    "clean": "rimraf build",
    "build": "npm run clean && webpack --config webpack.config.js && webpack --config webpack.server.config.js",
    "start": "nodemon app.js",
    "start:dev": "nodemon build/app.js"
  },
  "dependencies": {
    "@types/chart.js": "^2.9.24",
    "@types/hbs": "^4.0.1",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.1",
    "chart.js": "^2.9.3",
    "chartjs-plugin-streaming": "^1.8.0",
    "cookie-parser": "^1.4.5",
    "debug": "~4.1.1",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "gaugeJS": "^1.3.7",
    "hbs": "^4.1.1",
    "http-errors": "^1.8.0",
    "jquery": "^3.5.1",
    "moment": "^2.27.0",
    "moment-duration-format": "^2.3.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "shelljs": "0.8.4",
    "tplink-smarthome-api": "3.0.0-beta.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/express-ws": "^3.0.0",
    "@types/gaugejs": "^1.3.0",
    "@types/jquery": "^3.5.1",
    "@types/moment-duration-format": "^2.2.2",
    "@types/node": "^14.10.1",
    "@types/node-sass-middleware": "0.0.31",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "copy-webpack-plugin": "^6.1.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "pkg": "4.4.9",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "bin": {
    "tplink-monitor": "src/server/app.ts"
  },
  "pkg": {
    "scripts": "node_modules/hbs/lib/hbs.js",
    "assets": [
      "src/views/*",
      "src/public/**/*"
    ]
  }
}
